{
    // #######################
    // EDITOR SETTINGS
    // #######################
    "editor.fontSize": 15,
    "editor.fontWeight": "500",
    "editor.formatOnSaveTimeout": 3000,
    "editor.suggestSelection": "first",
    "editor.formatOnSave": true,
    "editor.tabCompletion": "on",
    "editor.trimAutoWhitespace": false,
    "editor.fontFamily": "Operator Mono",
    "editor.fontLigatures": true,
    "editor.cursorBlinking": "solid",
    "editor.formatOnPaste": true,
    "workbench.statusBar.visible": false, // removes the status bar
    "editor.minimap.enabled": false, // removes minimap
    "editor.renderWhitespace": "none", // removes whitespace chars
    "editor.renderIndentGuides": false, // removes indent guides
    "editor.renderLineHighlight": "none", // removes line highlight
    "editor.overviewRulerBorder": false, // removes border from overview ruler (located on the right, same position as the scrollbar)
    "editor.hideCursorInOverviewRuler": true, // hides cursor mark in the overview ruler
    "editor.folding": false, // removes the folding feature
    "editor.matchBrackets": false, // removes the highlight of matching brackets (I use Subtle Match Brackets extension for this)
    "editor.glyphMargin": false, // removes the space used mainly for debugging indicators
    "explorer.openEditors.visible": 0, // removes the open editors section at the top of the sidebar, you can see the opened files with ⌘ + ⌥ + Tab
    "workbench.activityBar.visible": false, // removes the activity bar (the 4 icons at the left of the screen), so now you will have to open the explorer, git, debugger and extension with shortcuts or through the Command Palette
    "workbench.editor.showIcons": false, // removes icon from opened files in tabs
    "indenticator.color.dark": "rgba(255,255,255,.1)", // adds a subtle indent guide (needs Indenticator extension)
    "editor.occurrencesHighlight": false, // removes highlights occurrences (still works when you select a word)
    "html.format.wrapLineLength": 0,
    "keyboard.touchbar.enabled": false,
    "explorer.confirmDelete": false,
    "window.zoomLevel": 0,
    "explorer.confirmDragAndDrop": false,
    "jumpy.fontSize": 12,
    "jumpy.fontFamily": "Fira Code",
    "debug.console.fontSize": 14,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.jediEnabled": false,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.fontFamily": "Fira Code",
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    "breadcrumbs.enabled": true,
    "files.autoSaveDelay": 3000,
    "files.associations": {
        "*.html": "html"
    },
    "vetur.format.defaultFormatterOptions": {
        "prettier": {
            "singleQuote": true,
            "semi": false
        }
    },
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "beautify.ignore": [
        "**/*.js",
        "**/*.jsx"
    ],
    // !Regular Projects
    "liveSassCompile.settings.formats": [
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": "/public/css/"
        }
    ],
    // // !Flask Settings
    // "liveSassCompile.settings.formats": [
    //     {
    //         "format": "expanded",
    //         "extensionName": ".css",
    //         "savePath": "/static/css/"
    //     }
    // ],
    // #######################
    // LINTERS
    // #######################
    "prettier.arrowParens": "always",
    "python.linting.flake8Enabled": true,
    "prettier.disableLanguages": [
        "html"
    ],
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // #######################
    // PERSONAL THEME TWEAKS
    // #######################
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#FF5555",
        "terminalCursor.foreground": "#FF5555",
        "editorOverviewRuler.border": "#ffffff00",
        "scrollbar.shadow": "#ffffff00",
        "scrollbarSlider.background": "#ffffff00",
        "tab.activeBorder": "#0000", // removes border to highlight active tabs (the colors formats are: #RGB, #RGBA, #RRGGBB or #RRGGBBAA)
        "[Gruvbox Dark Hard]": {
            "tab.border": "#ff000000",
            "panel.border": "#ffffff00",
            "contrastBorder": "#ff000000",
            "sideBar.border": "#ff000000",
            "sideBarSectionHeader.border": "#ffffff00",
            "editorGroupHeader.tabsBorder": "#ffffff00",
            "scrollbar.shadow": "#ffffff00",
            "scrollbarSlider.background": "#ffffff00",
            "statusBar.border": "#ffffff00",
        },
        "[Dracula]": {
            "tab.border": "#ff000000",
            "panel.border": "#ffffff00",
            "contrastBorder": "#ff000000",
            "sideBar.border": "#ff000000",
            "sideBarSectionHeader.border": "#ffffff00",
            "editorGroupHeader.tabsBorder": "#ffffff00",
            "scrollbar.shadow": "#ffffff00",
            "scrollbarSlider.background": "#ffffff00",
            "tab.inactiveBackground": "#21232c",
            "titleBar.activeBackground": "#21232c",
            "titleBar.inactiveBackground": "#21232c",
            "editorGroupHeader.tabsBackground": "#21232c",
            "statusBar.background": "#282a36",
            "editor.lineHighlightBackground": "#1a1c25",
            "editor.lineHighlightBorder": "#1a1c25",
            "editorBracketMatch.background": "#585f7c",
            "editorBracketMatch.border": "#585f7c",
            "editor.wordHighlightBackground": "#3e4258",
            "editor.wordHighlightStrongBackground": "#3e4258"
        }
    },
    "editor.tokenColorCustomizations": {
        "[βui - Minimal Yellow]": {
            "textMateRules": [
                {
                    "scope": "entity.name.function.js",
                    "settings": {
                        "foreground": "#7DBA84",
                    }
                },
                {
                    "scope": "support.class.component.js",
                    "settings": {
                        "foreground": "#759FBC",
                        "fontStyle": "italic"
                    }
                }
            ]
        },
        "[Gruvbox Dark Hard]": {
            "textMateRules": [
                {
                    "scope": "support.class.component.js",
                    "settings": {
                        "foreground": "#fb4934",
                        "fontStyle": "italic"
                    }
                }
            ]
        },
        "[Shades of Purple]": {
            "textMateRules": [
                {
                    // Things like 'for', 'return'
                    "scope": "keyword.control",
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "name": "this.self",
                    "scope": "variable.language",
                    "settings": {
                        "fontStyle": "italic",
                    }
                },
            ]
        },
        "[Material Theme Ocean High Contrast]": {
            "textMateRules": [
                {
                    // Things like 'for', 'return'
                    "scope": "keyword.control",
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    // Things like 'for', 'return'
                    "scope": "support.variable.property",
                    "settings": {
                        "foreground": "#eea25b"
                    }
                },
                {
                    "name": "this.self",
                    "scope": "variable.language",
                    "settings": {
                        "fontStyle": "italic",
                    }
                },
                {
                    "scope": "entity.name.function",
                    "settings": {
                        // "foreground": "#ffd277"
                    }
                },
                {
                    "scope": [
                        "variable.other.object",
                        "variable.other.readwrite"
                    ],
                    "settings": {
                        "foreground": "#b0b5c5"
                    }
                },
                {
                    "scope": "variable.other.object.property",
                    "settings": {
                        // "foreground": "#f3efd4"
                    }
                },
                {
                    "scope": "variable.other.property",
                    "settings": {
                        "foreground": "#ffdfa0"
                        // "foreground": "#ffd277"
                    }
                },
                {
                    "scope": "variable.parameter",
                    "settings": {
                        "foreground": "#f07178"
                    }
                },
                {
                    "scope": [
                        "punctuation.definition.string.begin.python",
                        "punctuation.definition.string.end.python"
                    ],
                    "settings": {
                        "foreground": "#676b7c"
                    }
                },
                {
                    "scope": [
                        "keyword.other.unit.px.css",
                        "keyword.other.unit.em.css",
                        "keyword.other.unit.percentage.css"
                    ],
                    "settings": {
                        "foreground": "#ffd277"
                    }
                }
            ]
        }
    }
}
